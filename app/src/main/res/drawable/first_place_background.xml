<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="ExtraText">
    <!-- Adding a gradient effect for a more dynamic look -->
    <gradient
        android:startColor="#FFEB3B"
    android:endColor="#FFC107"
    android:angle="45" />

    <!-- Adding rounded corners for a smoother look -->
    <corners android:radius="15dp" />

    <!-- Adding shadow effect for depth -->
    <solid android:color="#FFD700"/> <!-- Gold color for background -->

    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>
