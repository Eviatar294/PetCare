<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userGuideLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scrollViewUserGuide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnReturn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Guide"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"
                android:paddingBottom="16dp" />

            <!-- Section 1 -->
            <TextView
                android:id="@+id/tvSection1Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Getting Started"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvSection1Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up and Login:\nNew users are prompted to register by entering personal details (name, email, password). Registered users can log in via the login screen by entering their credentials."
                android:textSize="16sp"
                android:textColor="#616161"
                android:paddingBottom="16dp" />

            <!-- Section 2 -->
            <TextView
                android:id="@+id/tvSection2Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Pet Group Management"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvSection2Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creating a New Pet:\nIf no pet is associated with your account, the app will guide you through creating one by entering the pet name, type, and a unique group password.\n\nJoining an Existing Group:\nTo join an existing pet group, enter the leader’s details (email and pet password)."
                android:textSize="16sp"
                android:textColor="#616161"
                android:paddingBottom="16dp" />

            <!-- Section 3 -->
            <TextView
                android:id="@+id/tvSection3Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Task Management"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvSection3Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creating One-time Tasks:\nIn the tasks screen, create a new task by entering the date, time, and task description, and assign it to a specific user or leave it unassigned.\n\nCreating Recurring Tasks:\nSet up tasks that repeat daily or weekly (for weekly, select the appropriate day)."
                android:textSize="16sp"
                android:textColor="#616161"
                android:paddingBottom="16dp" />

            <!-- Section 4 -->
            <TextView
                android:id="@+id/tvSection4Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Leaderboard and Notifications"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvSection4Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leaderboard:\nMonitor user performance in your pet group via a leaderboard that ranks users based on the number of completed tasks.\n\nNotifications:\nThe app schedules daily notifications to remind you of upcoming tasks."
                android:textSize="16sp"
                android:textColor="#616161"
                android:paddingBottom="16dp" />

            <!-- Section 5 -->
            <TextView
                android:id="@+id/tvSection5Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Personal Settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvSection5Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Updating Pet Image:\nIn the settings screen, you can update your pet’s image by uploading a new picture that is saved on your device and on Firebase.\n\nLogout:\nLog out at any time; your details will be saved for future logins, and you can update personal details as needed."
                android:textSize="16sp"
                android:textColor="#616161"
                android:paddingBottom="16dp" />

            <!-- Section 6 -->
            <TextView
                android:id="@+id/tvSection6Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Useful Tips"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvSection6Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regularly update your tasks to keep the leaderboard current and to receive timely notifications. Use filtering and search options to quickly locate specific tasks. If you have any questions or issues, help messages and alerts are provided."
                android:textSize="16sp"
                android:textColor="#616161"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
