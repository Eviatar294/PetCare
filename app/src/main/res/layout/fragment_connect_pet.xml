<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ConnectPetFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvLetsJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B02737"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:text="Teamwork makes the dream work" />

            <EditText
                android:id="@+id/etEmailLeader"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:ems="10"
                android:hint="Gmail of the leader of the pack"
                android:inputType="text" />

            <EditText
                android:id="@+id/etPassJoin"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:ems="10"
                android:hint="Password to join"
                android:inputType="text" />

            <Button
                android:id="@+id/bJoinPet"
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#B02737"
                android:text="join to the group" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="176dp"
                android:layout_height="151dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/_1lkbhkrv2l" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>