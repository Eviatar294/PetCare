<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/creditRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvCreditTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credits"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Scrollable credit content -->
    <ScrollView
        android:id="@+id/scrollViewCredit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/tvCreditContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by Eviatar Sayada.\n\nID: 216756650\n\nTeacher host: Dov Sochovolsky\n\nAll rights reserved.\n\nThank you for using PetCare!"
            android:textSize="16sp"
            android:textColor="#616161"
            android:padding="16dp"/>
    </ScrollView>

    <!-- Return Button with extra top margin -->
    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
